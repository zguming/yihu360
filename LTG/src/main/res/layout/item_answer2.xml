<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wite"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear2_bg"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="@color/gray"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/linear2_image"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:src="@drawable/arrow_whrite" />

            <TextView
                android:id="@+id/linear2_text1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="综合练习"
                android:textColor="@color/wite"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2_bg2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/linear2_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dip"
                    android:text="第1组答题完成  "
                    android:textColor="@color/wite"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/linear2_text_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dip"
                    android:text=""
                    android:textColor="@color/wite"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="答对"
                        android:textColor="@color/wite"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dip" >

                        <TextView
                            android:id="@+id/linear2_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/wite"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/linear2_text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / 10 道"
                            android:textColor="@color/wite"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正确率"
                        android:textColor="@color/wite"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dip" >

                        <TextView
                            android:id="@+id/linear2_text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/wite"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" %"
                            android:textColor="@color/wite"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2_cuotijiexi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_click_wite"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/linear2_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="错题解析"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_list_right" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/linear2_zhengzujiexi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_click_wite"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/linear2_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="整组解析"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_list_right" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/light_gray" />
    </LinearLayout>

    <Button
        android:id="@+id/linear2_buttom_button"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_gravity="bottom"
        android:alpha="0.7"
        android:text="开始下一组"
        android:textSize="15sp" 
        android:textColor="@color/wite"/>

</FrameLayout>