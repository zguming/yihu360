<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/regis_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wite"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wite"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginBottom="20dip"
            android:gravity="center"
            android:text="请输入昵称与登陆密码"
            android:textColor="@color/wite"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/nickLinear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nickName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:background="@color/transparent"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="登陆密码:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/password_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:background="@color/transparent"
                android:inputType="text"
                android:password="true"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="重复密码:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/password_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:background="@color/transparent"
                android:inputType="text"
                android:password="true"
                android:singleLine="true"
                android:textSize="16sp" />

            <Button
                android:id="@+id/next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="10dip"
                android:text="下一步"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="25dip"
                android:gravity="bottom|center_horizontal" >

                <TextView
                    android:id="@+id/loging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有帐号登录"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 手机验证页面 -->

        <LinearLayout
            android:id="@+id/phoneLinear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <TextView
                android:id="@+id/tx4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的手机:"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linear_phone_verify"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:maxLength="11"
                    android:numeric="integer"
                    android:padding="10dip"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/getAuthCode"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_marginTop="1dip"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="获取验证码"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/zc_sjts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tx5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="验证码:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/authCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:background="@color/transparent"
                android:numeric="integer"
                android:singleLine="true"
                android:textSize="16sp" />

            <Button
                android:id="@+id/start_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="10dip"
                android:text="开始"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dip"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/loging2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:padding="8dip"
                    android:text="已有帐号登录"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>