<?xml version="1.0" encoding="utf-8"?>
<cn.net.dingwei.myView.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="45dip"
        android:paddingTop="45dip" >

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:lineSpacingMultiplier="1.2"
            android:text="智能组卷 模拟考试"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="按照真实考试题型/章节/分值.."
            android:textSize="13dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="45dip"
            android:layout_marginTop="45dip"
            android:paddingTop="20dip" >

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中"
                android:textColor="@color/wite"
                android:textSize="13sp" 
                android:background="@color/transparent"/>
        </LinearLayout>
    </LinearLayout>

</cn.net.dingwei.myView.MyScrollView>