<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.net.dingwei.myView.MyScrollView
        android:id="@+id/myscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linear_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_10dip">
            <TextView
                android:id="@+id/text_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/fontcolor_3"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </cn.net.dingwei.myView.MyScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/wite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dip">

        <EditText
            android:id="@+id/editText_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/stroke_color_gray"
            android:hint="输入你想说的话"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColorHint="@color/light_gray"
            android:textSize="13sp"
            android:maxLength="200"
            android:imeOptions="actionDone"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="发送"
            android:textColor="@color/wite"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>