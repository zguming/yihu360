<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/sub_layout_title" />
   <!--  <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/bgcolor_1"
        android:gravity="center"
        android:text="注册新用户"
        android:textColor="@color/wite"
        android:textSize="16sp" /> -->

    <cn.net.dingwei.myView.MyScrollView
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/nickLinear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="昵称:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nickName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:background="@color/transparent"
                android:maxLength="16"
                android:padding="10dip"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip"
                android:text="登陆密码:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/password_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:background="@color/transparent"
                android:inputType="text"
                android:maxLength="16"
                android:padding="10dip"
                android:password="true"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip"
                android:text="重复密码:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/password_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:background="@color/transparent"
                android:inputType="text"
                android:maxLength="16"
                android:padding="10dip"
                android:password="true"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="地区:"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@color/transparent"
                android:drawableRight="@drawable/home_list_right"
                android:gravity="left|center_vertical"
                android:padding="10dip"
                android:text="北京"
                android:textColor="@color/wite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/zc_csts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:gravity="left"
                android:text="提示"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:background="@color/bgcolor_1"
                android:gravity="center"
                android:padding="10dip"
                android:text="下一步"
                android:textColor="@color/wite"
                android:textSize="15sp" />
        </LinearLayout>
    </cn.net.dingwei.myView.MyScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="10dip" >

        <TextView
            android:id="@+id/text_loging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:text="已有帐号登录"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>