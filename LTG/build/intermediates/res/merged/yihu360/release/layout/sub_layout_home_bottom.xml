<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_buttom_bg"
    android:layout_width="fill_parent"
    android:layout_height="45dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/home_buttom_linear1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_buttom_image1"
            android:layout_width="20dip"
            android:layout_height="20dip" />

        <TextView
            android:id="@+id/home_buttom_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="练习"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_buttom_linear2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
       >

        <ImageView
            android:id="@+id/home_buttom_image2"
            android:layout_width="20dip"
            android:layout_height="20dip" />

        <TextView
            android:id="@+id/home_buttom_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_buttom_linear3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/home_buttom_image3"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/buttom_msg_text"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:background="@drawable/msg_bg"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/wite"
                android:textSize="8sp"
               />
        </FrameLayout>

        <TextView
            android:id="@+id/home_buttom_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资讯"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_buttom_linear4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_buttom_image4"
            android:layout_width="20dip"
            android:layout_height="20dip" />

        <TextView
            android:id="@+id/home_buttom_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>