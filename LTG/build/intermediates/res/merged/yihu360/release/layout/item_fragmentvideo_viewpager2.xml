<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/refresh" />

    <include layout="@layout/item_video_nodata" />

    <cn.net.dingwei.myView.MyScrollView
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lianxi_bg"
        android:scrollbars="none">

        <cn.net.dingwei.myView.MyListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/lianxi_bg"
            android:dividerHeight="10dp"></cn.net.dingwei.myView.MyListView>
    </cn.net.dingwei.myView.MyScrollView>
</LinearLayout>
