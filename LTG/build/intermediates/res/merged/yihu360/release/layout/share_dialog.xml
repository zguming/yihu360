<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/share_bg"
        android:horizontalSpacing="10dp"
        android:listSelector="@null"
        android:numColumns="4"
        android:paddingBottom="@dimen/margin_10dip"
        android:paddingTop="@dimen/margin_10dip"
        android:verticalSpacing="10dp"></GridView>

    <LinearLayout
        android:id="@+id/linear_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/share_bg"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_hint"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="请朋友扫码，领0元红包"
            android:gravity="center_horizontal|bottom"
            android:textColor="@color/fontcolor_3"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/margin_10dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:layout_marginRight="@dimen/margin_10dip"
            />
        <ImageView
            android:id="@+id/qr_code_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15sp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/wite"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_cancel"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/share_btn_cancel" />
    </LinearLayout>
</LinearLayout>
