<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/list_category_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lianxi_bg"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:text="我的笔记"
        android:textColor="@color/bgcolor_2"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <cn.net.dingwei.myView.RoundImageView
            android:id="@+id/head_icon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/icon"
            imagecontrol:border_outside_color="#feffff"
            imagecontrol:border_thickness="2dp" />

        <LinearLayout
            android:id="@+id/linear_sanjiao"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="6dip"
                android:layout_height="14dip"
                android:layout_marginTop="17dip"
                android:src="@drawable/iconfont_sanjiaoxingjiantouzuo" />

            <View
                android:layout_width="2dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/bgcolor_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingRight="10dip" >

                <TextView
                    android:id="@+id/text_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/bgcolor_2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="2015-15-16 08:18"
                    android:textColor="@color/fontcolor_7"
                    android:textSize="13sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:paddingRight="10dip"
                android:text="内容笔记内容笔记内容笔记内"
                android:textColor="@color/fontcolor_3"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>