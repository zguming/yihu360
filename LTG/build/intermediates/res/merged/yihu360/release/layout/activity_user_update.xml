<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lianxi_bg"
    android:orientation="vertical" >

    <include layout="@layout/sub_layout_home_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/left_text1"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_alignParentLeft="true"
                android:gravity="bottom"
                android:text="手机号："
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginTop="20dip"
                android:layout_alignParentRight="true"
                android:gravity="right|bottom"
                android:text="获取验证码"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@id/text"
                android:layout_toRightOf="@id/left_text1"
                android:background="@color/transparent"
                android:gravity="bottom"
                android:hint="请输入新手机号"
                android:numeric="integer"
                android:singleLine="true"
                android:maxLength="11"
                android:textColorHint="@color/listview_item"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/xian1"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@id/editText1"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/left_text2"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_alignParentLeft="true"
                android:gravity="bottom"
                android:text="手机号："
                android:textSize="13sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_toRightOf="@id/left_text2"
                android:background="@color/transparent"
                android:gravity="bottom"
                android:hint="请输入新手机号"
                android:numeric="integer"
                android:singleLine="true"
                android:textColorHint="@color/listview_item"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/xian2"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@id/editText2"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/left_text3"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_alignParentLeft="true"
                android:gravity="bottom"
                android:text="手机号："
                android:textSize="13sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_toRightOf="@id/left_text3"
                android:background="@color/transparent"
                android:gravity="bottom"
                android:hint="请输入新手机号"
                android:numeric="integer"
                android:singleLine="true"
                android:textColorHint="@color/listview_item"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/xian3"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@id/editText3"
                android:layout_marginTop="5dip"
                android:background="@color/gray" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:text="完成" />
    </LinearLayout>

</LinearLayout>