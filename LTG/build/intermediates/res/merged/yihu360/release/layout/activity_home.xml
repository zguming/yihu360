<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lianxi_bg"
    android:orientation="vertical"
    android:paddingBottom="45dip" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_top_bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/bgcolor_2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4" />
        </LinearLayout>

        <cn.net.dingwei.myView.MyScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/home_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="45dp" >

                <RelativeLayout
                    android:id="@+id/relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/linear_dian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/linear_jixu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/touch_click_wite"
                    android:padding="@dimen/margin_10dip">
                    <TextView
                        android:id="@+id/text_jixutext1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="内容"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/text_jixutext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="继续练习"
                        android:textSize="13sp"
                        android:paddingRight="@dimen/margin_10dip"
                        />
                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home_list_right"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/xian_product"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_3"/>
                <FrameLayout
                    android:id="@+id/framen_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                   >
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wite"/>
                    <LinearLayout
                        android:id="@+id/linear_product_dian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:paddingBottom="10dp"
                        android:visibility="gone">
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/linear_choose_subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lianxi_bg"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip"
                    >

                    <TextView
                        android:id="@+id/text01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip"
                        android:background="@color/wite"
                        android:padding="10dip"
                        android:text="章节练习"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/xian"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />

                <cn.net.dingwei.myView.MyListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </cn.net.dingwei.myView.MyListView>

                <TextView
                    android:id="@+id/xian2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lianxi_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text02"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip"
                        android:background="@color/wite"
                        android:paddingBottom="10dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="10dip"
                        android:paddingTop="10dip"
                        android:text="巩固练习"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/color_4" />

                    <LinearLayout
                        android:id="@+id/buttom_linear1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/touch_click_wite"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dip" >

                        <TextView
                            android:id="@+id/text03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text="我的错题"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="10dip" >

                            <TextView
                                android:id="@+id/text_data1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dip"
                                android:text=""
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/home_list_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/color_4" />

                    <LinearLayout
                        android:id="@+id/buttom_linear2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/touch_click_wite"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dip" >

                        <TextView
                            android:id="@+id/text04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text="我的收藏"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="10dip" >

                            <TextView
                                android:id="@+id/text_data2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dip"
                                android:text=""
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/home_list_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/color_4" />

                    <LinearLayout
                        android:id="@+id/buttom_linear3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/touch_click_wite"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dip" >

                        <TextView
                            android:id="@+id/text05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text="我的笔记"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal"
                            android:paddingRight="10dip" >

                            <TextView
                                android:id="@+id/text_data3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dip"
                                android:text=""
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/home_list_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/color_4" />
                </LinearLayout>
            </LinearLayout>
        </cn.net.dingwei.myView.MyScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/home_load_progressbar"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:indeterminateDrawable="@drawable/home_progress"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>