<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:gravity="center_vertical"
    android:orientation="horizontal"
                android:id="@+id/rl_home_left_top"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/home_layoutLeft"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
              	android:paddingLeft="5dip"
                android:visibility="invisible"
              	android:paddingTop="5dip"
              	android:paddingRight="5dip"
              	android:paddingBottom="5dip" >

                <ImageView
                    android:id="@+id/hoem_leftmenu_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_leftmune_left"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_layoutRight"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
               	android:paddingLeft="5dip"
              	android:paddingTop="5dip"
              	android:paddingRight="5dip"
              	android:paddingBottom="5dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <!--<ImageView
                        android:id="@+id/hoem_rightmenu_right"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/home_rightmenu_right"
                       />-->
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/arrow_b"
                        />
                   
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/home_layoutRight"
                android:layout_toRightOf="@id/home_layoutLeft"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/home_left_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:text="标题"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>