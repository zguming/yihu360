<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/linear_Nodata"
    android:visibility="gone"
    >
    <ImageView
        android:layout_width="110dp"
        android:layout_height="175dp"
        android:src="@drawable/video_nodata"/>
    <TextView
        android:id="@+id/text_no_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无直播，敬请期待"
        android:layout_marginTop="15dp"
        android:textColor="@color/fontcolor_7"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/text_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="看看其他精品视频课程>"
        android:layout_marginTop="10dp"
        android:textColor="@color/bgcolor_2"
        android:textSize="13sp"/>
</LinearLayout>
