<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageview_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:alpha="0.55"
            android:text="建议您进行："
            android:textColor="@color/wite"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <cn.net.dingwei.myView.TasksCompletedView
                android:id="@+id/tasks_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:circleColor="@color/circle_color"
                app:radius="50dip"
                app:ringColor="@color/ring_color"
                app:strokeWidth="5dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dip"
                android:paddingTop="10dip"
                android:text="评估练习"
                android:textColor="@color/wite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:text="通过评估练习，神奇保罗能为您做出初步只是评估，以便为您定制更有效的练题计划以便为您定制更有效的练题计划以便为您定制更有效的练题计划。"
                android:textColor="@color/wite"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>