<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <cn.net.dingwei.myView.ElasticScrollView_answer
        android:id="@+id/myScrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/lianxi_bg"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/timu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:padding="10dip"
                android:text=""
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip" />

            <LinearLayout
                android:id="@+id/linear_choice_question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linear_answer_a"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_a"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/answer_a" />

                    <TextView
                        android:id="@+id/answer_text_a"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_answer_b"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_b"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/answer_b" />

                    <TextView
                        android:id="@+id/answer_text_b"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_answer_c"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_c"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/answer_c" />

                    <TextView
                        android:id="@+id/answer_text_c"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_answer_d"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_d"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/answer_d" />

                    <TextView
                        android:id="@+id/answer_text_d"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_answer_e"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_e"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/answer_e" />

                    <TextView
                        android:id="@+id/answer_text_e"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_answer_f"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_f"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/answer_f" />

                    <TextView
                        android:id="@+id/answer_text_f"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_answer_g"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_g"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/answer_g" />

                    <TextView
                        android:id="@+id/answer_text_g"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/true_or_false_questions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linear_answer_true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_true"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/npd_1" />

                    <TextView
                        android:id="@+id/answer_text_true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_answer_false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/answer_false"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/npd_2" />

                    <TextView
                        android:id="@+id/answer_text_false"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingLeft="15dip"
                        android:text=""
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_answer_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/touch_click"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dip" >

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/answer_no" />

                <TextView
                    android:id="@+id/answer_text_no"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingLeft="15dip"
                    android:text="不会"
                    android:textSize="13sp" />
            </LinearLayout>
            <!-- 占位的Textview  显示解析的时候隐藏 -->

            <TextView
                android:id="@+id/temp_text"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/analysis"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingTop="20dip"
                android:visibility="gone"
               >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:id="@+id/linear_answer_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dip"
                        android:text="正确答案是"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/answer_text_jiexi_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:paddingTop="10dip"
                        android:text=""
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dip"
                        android:text="，你的答案是"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/answer_text_jiexi_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:paddingTop="10dip"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="25dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/answer_person"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:src="@drawable/answer_person" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/answer_text_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dip"
                            android:text=""
                            android:textColor="@color/gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/answer_text_person_identity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dip"
                            android:text=""
                            android:textColor="@color/answer_dialog_color1"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dip"
                        android:background="@drawable/stroke_color_gray"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:padding="10dip" >
                        <LinearLayout
                            android:id="@+id/linear_jiexi_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/answer_text_bentijiexi"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/jiexi"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/answer_text_jiexi_content"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingMultiplier="1.3"
                                android:paddingTop="10dip"
                                android:text=""
                                android:textColor="@color/gray"
                                android:textSize="13sp" />
                            <ImageView
                                android:id="@+id/image_jiexi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginTop="10dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pay_hint_linear"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <TextView
                                android:id="@+id/pay_hint1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dip"
                                android:text=""
                                android:textColor="@color/vip_kuaidaoqi"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/pay_hint2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dip"
                                android:paddingTop="5dip"
                                android:text=""
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_vip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dip"
                        android:background="@drawable/stroke_color_gray"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dip"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/payRmb_vip1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="1.3"
                            android:paddingTop="15dip"
                            android:text="会员到期"
                            android:textColor="@color/gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/payRmb_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:lineSpacingMultiplier="1.3"
                            android:padding="5dip"
                            android:text="升级正式会员"
                            android:textColor="@color/gray"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="30dip"
                        android:layout_height="20dip"
                        android:gravity="center_horizontal" >

                        <ImageView
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:src="@drawable/answer_trigon" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linear_buttom_kaodian1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="15dip"
                    android:paddingTop="15dip" >

                    <TextView
                        android:id="@+id/answer_text_kaodian"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="考点"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/linear_buttom_kaodian"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
                <!--  -->

                <LinearLayout
                    android:id="@+id/linear_buttom_all"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="25dip"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingTop="10dip" >

                        <TextView
                            android:id="@+id/text_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="学习笔记"
                            android:textColor="@color/fontcolor_3"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_add_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dip"
                            android:text="添加笔记"
                            android:textColor="@color/bgcolor_2"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_notes"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <!-- 测试 布局 -->

                          <!-- <include layout="@layout/item_question_jianda" />

                          <include layout="@layout/item_question_jianda_right_head" />

                        <include layout="@layout/item_question_jianda_right_head" /> --> 
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_look_all"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="查看全部笔记 "
                        android:textColor="@color/fontcolor_3"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingTop="20dip" >

                        <LinearLayout
                            android:id="@+id/linear_Collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" 
                            android:padding="5dip">

                            <ImageView
                                android:id="@+id/image_Collection"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dip"
                                android:src="@drawable/icon" />

                            <TextView
                                android:id="@+id/text_Collection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="收藏本题"
                                android:textColor="@color/fontcolor_3"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" 
                            android:padding="5dip">

                            <ImageView
                                android:id="@+id/image_error"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dip"
                                android:src="@drawable/icon" />

                            <TextView
                                android:id="@+id/text_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="我要纠错"
                                android:textColor="@color/fontcolor_3"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="80dip" />
            </LinearLayout>
        </LinearLayout>
    </cn.net.dingwei.myView.ElasticScrollView_answer>

</LinearLayout>