<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_click_wite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="20dip"
            android:layout_height="20dip" 
            android:layout_marginLeft="10dip"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:text="选择练习科目"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:text=""
                android:textSize="13sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_list_right" />

            <TextView
                android:id="@+id/text_gou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="√"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_night"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/wite"
        android:visibility="gone">
        <ImageView
            android:id="@+id/left_image1"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"/>
        <me.xiaopan.switchbutton.SwitchButton
            android:id="@+id/btn_Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="夜间模式"
            android:textSize="13sp"
            android:textColor="@color/fontcolor_3"
            app:withTextInterval="5dp"
            android:background="@color/wite"
            app:frameDrawable="@mipmap/switch_frame"
            app:stateDrawable="@drawable/selector_switch_state"
            app:stateMaskDrawable="@mipmap/switch_state_mask"
            app:sliderDrawable="@drawable/selector_switch_slider"/>
    </LinearLayout>

    <TextView
        android:id="@+id/buttom_xian"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:visibility="gone" />

</LinearLayout>