<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/sub_layout_home_title" />

    <cn.net.dingwei.myView.MyScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lianxi_bg"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <cn.net.dingwei.myView.MyGridView
                android:id="@+id/share_gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/share_gridview_bg"
                android:horizontalSpacing="1dip"
                android:listSelector="@null"
                android:numColumns="1"
                android:paddingBottom="1dip"
                android:paddingTop="1dip"
                android:verticalSpacing="1dip" >
            </cn.net.dingwei.myView.MyGridView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/radius_white_10dip"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/qr_code_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/qr_code_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/red"
                     />

                <TextView
                    android:id="@+id/qr_code_buttom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </cn.net.dingwei.myView.MyScrollView>

</LinearLayout>