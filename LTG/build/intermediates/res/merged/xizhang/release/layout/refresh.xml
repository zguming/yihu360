<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shuaxin_linear"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:orientation="vertical"
        	android:gravity="center"
        	android:background="@color/wite"
        	android:visibility="gone"
        	>
        <TextView
            android:id="@+id/shuaxin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载失败，点击立即刷新" 
            android:paddingBottom="10dip"
            android:textColor="@color/shuaxin_textcolor"/>
        <Button
            	android:id="@+id/shuaxin_button"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="立即刷新" 
            	android:background="@drawable/button_radius"
            	android:textColor="@color/wite"
            />

</LinearLayout>
